<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/background2"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Problem :"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/analisarp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hitungrp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="Problem"
            android:fontFamily="@font/bahnschrift"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/problemTV"
            app:layout_constraintTop_toTopOf="@+id/analisarp"
            app:layout_constraintStart_toEndOf="@+id/analisarp" android:layout_marginStart="4dp"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <Chronometer
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:id="@+id/hitungrp"
            android:layout_width="149dp"
            android:layout_height="30dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="No.Mold"
            android:fontFamily="@font/bahnschrift"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nomoldrpTV"
            app:layout_constraintEnd_toStartOf="@+id/hitungrp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="26dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/analisarp"/>

    <TextView android:layout_width="wrap_content"
              android:text="Estimasi :"
              android:fontFamily="@font/bahnschrift"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:layout_height="wrap_content"
              android:id="@+id/textView4"
              app:layout_constraintTop_toTopOf="@+id/textView3"
              app:layout_constraintBottom_toBottomOf="@+id/textView3"
              app:layout_constraintStart_toEndOf="@+id/problemTV" android:layout_marginStart="16dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="Jam"
              android:fontFamily="@font/bahnschrift"
              android:textColor="@color/black"
              android:layout_height="wrap_content"
              android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView4"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@+id/estimasijam"
              app:layout_constraintBottom_toBottomOf="@+id/estimasijam"/>

    <TextView android:layout_width="wrap_content"
              android:text="Menit"
              android:fontFamily="@font/bahnschrift"
              android:textColor="@color/black"
              android:layout_height="wrap_content"
              android:id="@+id/textView2"
              app:layout_constraintStart_toEndOf="@+id/estimasijam" android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@+id/estimasimenit"
              app:layout_constraintBottom_toBottomOf="@+id/estimasimenit"/>
    <TextView android:layout_width="wrap_content"
              android:text="Menit"
              android:fontFamily="@font/bahnschrift"
              android:textColor="@color/green"
              android:id="@+id/estimasimenit"
              android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@+id/textView2"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/hitungrp"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Jam"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/estimasijam"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/textView2"/>
</androidx.constraintlayout.widget.ConstraintLayout>