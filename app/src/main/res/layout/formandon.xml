<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/artboard_1"
        android:layout_height="match_parent"
        tools:context=".OnProgressActivity">

    <TextView
            android:id="@+id/judulProblem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bahnschrift"
            android:text="No. MC"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waktu12" />
    <TextView
            android:text="Waktu Repair :"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waktu12"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textSize="18sp"
            android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/waktuRepairCMeter"/>
    <TextView
            android:text="N/A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/noMCTV"
            android:textSize="18sp" android:textStyle="bold" app:layout_constraintTop_toTopOf="@+id/judulProblem"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv4" android:layout_marginStart="8dp"/>

    <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/waktuRepairCMeter" android:textSize="18sp"/>
    <TextView
            android:text="Problem"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv123555" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/issuedPICTV"/>
    <TextView
            android:text="Issued by"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/noMCTV"/>
    <TextView
            android:text="N/A"
            android:fontFamily="@font/bahnschrift"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/issuedPICTV"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/tv6"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv5"/>
    <TextView
            android:text="Perbaikan"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/problemET"/>
    <TextView
            android:text="Jenis Problem"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv3"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/perbaikanET" android:textAlignment="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text=":"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv123412"
            android:textSize="18sp" android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/tv123555"
            app:layout_constraintTop_toTopOf="@+id/tv123555"/>
    <TextView
            android:text=":"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv6"
            android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv5"
            app:layout_constraintTop_toTopOf="@+id/tv5"/>
    <TextView
            android:text=":"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv4"
            android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/judulProblem"
            app:layout_constraintTop_toTopOf="@+id/judulProblem"/>
    <TextView
            android:text=":"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:textSize="18sp" android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/tv"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/problemET"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bahnschrift"
            android:textStyle="bold"
            android:ems="10"
            android:id="@+id/problemET"
            app:layout_constraintStart_toEndOf="@+id/tv123412"
            android:layout_marginStart="8dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textMultiLine" android:hint="Problem"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/issuedPICTV"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/perbaikanET"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bahnschrift"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/problemET" app:layout_constraintStart_toEndOf="@+id/tv123412"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textMultiLine" app:layout_constraintHorizontal_bias="1.0"
            android:hint="Detail Perbaikan"/>
    <EditText
            android:layout_width="100dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/bahnschrift"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/jenisProblemET"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textMultiLine"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv3" android:hint="Jenis" android:textAlignment="center"/>
    <ImageButton
            android:layout_width="150dp"
            android:scaleType="fitCenter"
            android:background="#00040303"
            android:layout_height="50dp" app:srcCompat="@drawable/finish"
            android:id="@+id/finishProgressBTN"
            android:onClick="goFinishProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cancelProgressBTN"
            app:layout_constraintEnd_toStartOf="@+id/cancelProgressBTN"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="150dp"
            android:scaleType="fitCenter"
            android:background="#00040303"
            android:layout_height="50dp" app:srcCompat="@drawable/cancel"
            android:id="@+id/cancelProgressBTN"
            android:onClick="goCancelProgress" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="250dp" app:layout_constraintTop_toBottomOf="@+id/jenisProblemET"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/finishProgressBTN"/>


</androidx.constraintlayout.widget.ConstraintLayout>