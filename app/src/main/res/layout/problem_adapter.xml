<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/background2"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="No. MC"
            android:textColor="@color/black"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:id="@+id/nomcdpTV"
            android:fontFamily="@font/bahnschrift"
            android:textStyle="bold" android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/hitung"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Problem :"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/analisarp"
            app:layout_constraintTop_toTopOf="@+id/problemTV" app:layout_constraintEnd_toStartOf="@+id/problemTV"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Detail Problem"
            android:fontFamily="@font/bahnschrift"
            android:textStyle="bold"
            android:layout_width="311dp"
            android:layout_height="18dp"
            android:id="@+id/problemTV"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hitung" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/analisarp"/>

    <Chronometer android:layout_width="wrap_content"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 android:fontFamily="@font/bahnschrift"
                 android:textSize="20sp"
                 android:layout_height="wrap_content"
                 android:id="@+id/hitung"
                 app:layout_constraintTop_toTopOf="@+id/nomcdpTV" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toEndOf="@+id/nomcdpTV"
    />
</androidx.constraintlayout.widget.ConstraintLayout>